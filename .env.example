# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Redis配置 (可选缓存)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password