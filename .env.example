# 应用配置
APP_PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_db_password
DB_DATABASE=argochainhub

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-please-change-in-production
